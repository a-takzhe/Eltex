NNAAMMEE
       pthread_mutex_init — destroy and initialize a mutex

SSYYNNOOPPSSIISS
       #include <pthread.h>

       int pthread_mutex_init(pthread_mutex_t *restrict _m_u_t_e_x,
           const pthread_mutexattr_t *restrict _a_t_t_r);
       pthread_mutex_t _m_u_t_e_x = PTHREAD_MUTEX_INITIALIZER;

DDEESSCCRRIIPPTTIIOONN
       Refer to _p_t_h_r_e_a_d___m_u_t_e_x___d_e_s_t_r_o_y().

